{
  "name": "play-with-jwt",
  "version": "1.0.0",
  "description": "JWT + Node.js tutorial",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "start": "run-p start:server start:client",
    "start:server": "NODE_PATH=. NODE_ENV=development node -r esm ./server/index.js",
    "start:client": "NODE_ENV=development poi --serve",
    "seed": "node -r esm ./node_modules/.bin/knex seed:run",
    "migrate": "node -r esm ./node_modules/.bin/knex-migrate up",
    "migrate:drop": "node -r esm ./node_modules/.bin/knex-migrate down --to 0",
    "migrate:reset": "run-s migrate:drop migrate seed"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/subuta/play-with-jwt.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/subuta/play-with-jwt/issues"
  },
  "jest": {
    "modulePaths": [
      "<rootDir>"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "/**/*/?(*.)+(spec).[jt]s?(x)"
    ],
    "coverageReporters": [
      "text-summary",
      "lcov"
    ]
  },
  "homepage": "https://github.com/subuta/play-with-jwt#readme",
  "dependencies": {
    "@koa/cors": "^2.2.3",
    "bcrypt": "^3.0.3",
    "bluebird": "^3.5.3",
    "boom": "^7.3.0",
    "knex": "^0.19.5",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-compose": "^4.1.0",
    "koa-jwt": "^3.5.1",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.1",
    "koa-router": "^7.4.0",
    "lodash": "^4.17.15",
    "ms": "^2.1.2",
    "passport-local": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-powerplug": "^1.0.0",
    "recompose": "^0.30.0",
    "sqlite3": "^4.0.6"
  },
  "devDependencies": {
    "consola": "^2.10.1",
    "esm": "3.2.25",
    "jest": "^24.1.0",
    "jsonwebtoken": "^8.5.1",
    "knex-migrate": "^1.7.0",
    "npm-run-all": "^4.1.5",
    "poi": "^12.7.2",
    "sinon": "^7.4.1",
    "standard": "^12.0.1",
    "supertest": "^3.3.0"
  }
}
